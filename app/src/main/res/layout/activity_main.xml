<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MaterialAlertDialog.Material3.Body.Text.CenterStacked"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnProcessar"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="379dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#2196F3"
        android:backgroundTintMode="multiply"
        android:onClick="onClick"
        android:text="Processar"
        app:iconTint="#E91E63"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/txtConsole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt02" />

    <EditText
        android:id="@+id/txt01"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Texto 1"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/txt02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt02"
        android:layout_width="377dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Texto 2"
        app:layout_constraintBottom_toTopOf="@+id/btnProcessar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt01" />

    <TextView
        android:id="@+id/txtConsole"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="33dp"
        android:background="#000000"
        android:backgroundTint="#00FFFFFF"
        android:backgroundTintMode="screen"
        android:padding="5pt"
        android:text="texto texto texto texto texto\ntexto texto texto texto texto\ntexto texto texto texto texto\ntexto texto texto texto texto\ntexto texto texto texto texto\n"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProcessar" />

</androidx.constraintlayout.widget.ConstraintLayout>